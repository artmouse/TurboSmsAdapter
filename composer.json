{
    "name": "sms-gate/turbo-sms-adapter",
    "description": "The library implement TurboSMS adapter.",
    "keywords": [ "sms", "gate", "sms gate", "turbosms", "turbo sms"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "zhuk2205@gmail.com"
        }
    ],

    "require": {
        "php": ">=7.1",
        "sms-gate/sms-gate": "~1.0.0"
    },

    "require-dev": {
        "ext-soap": "*",
        "ext-xml": "*",
        "phpunit/phpunit": "^6.2",
        "phpmetrics/phpmetrics": "^2.0",
        "escapestudios/symfony2-coding-standard": "~2.0"
    },

    "suggest": {
        "ext-soap": "For use SOAP TurboSMS adapter.",
        "ext-xml": "For use SOAP TurboSMS adapter."
    },

    "provide": {
        "sms-gate/adapter": "1.0.0"
    },

    "autoload": {
        "psr-4": { "SmsGate\\Adapter\\TurboSms\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "SmsGate\\Adapter\\TurboSms\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "./bin/"
    }
}
